<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">



        <EditText
            android:id="@+id/edit_text_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question"/>
        <EditText
            android:id="@+id/edit_text_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A"/>
        <EditText
            android:id="@+id/edit_text_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="B"/>
        <EditText
            android:id="@+id/edit_text_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="C"/>
        <EditText
            android:id="@+id/edit_text_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="D"/>
        <EditText
            android:id="@+id/edit_text_True"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_update"/>

            <Button
                android:background="@drawable/button_delete"
            android:id="@+id/delete_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
